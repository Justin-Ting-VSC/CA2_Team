<!DOCTYPE html>
<html>
<head>
  <title>Study Resources</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body { background-color: #f4f1ea; }
    .btn-brown { background-color: #4B2E2E; color: white; }
    .btn-outline-brown { border-color: #4B2E2E; color: #4B2E2E; }
    .btn-outline-brown:hover { background-color: #4B2E2E; color: white; }
    .table thead { background-color: #4B2E2E; color: white; }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">üîçÔ∏é Study Resources ‚ãÜÀöÍ©úÔΩ°</h2>

    <!-- Search form -->
    <form class="form-inline mb-4" method="GET" action="/searchResource">
      <input type="text" name="name" class="form-control mr-2" placeholder="Search by title" value="<%= nameQuery %>">
      <button class="btn btn-outline-brown">Search</button>
    </form>

    <!-- Add new resource -->
    <form action="/addResource" method="POST" class="mb-5">
      <div class="form-row">
        <div class="col-md-2"><input type="text" name="subject_id" class="form-control" placeholder="Subject ID" required></div>
        <div class="col-md-3"><input type="text" name="title" class="form-control" placeholder="Title" required></div>
        <div class="col-md-2">
          <select name="type" class="form-control" required>
            <option value="">Type</option>
            <option value="video">Video</option>
            <option value="article">Article</option>
            <option value="document">Document</option>
            <option value="quiz">Quiz</option>
            <option value="case_study">Case Study</option>
          </select>
        </div>
        <div class="col-md-3"><input type="url" name="url" class="form-control" placeholder="Resource URL" required></div>
        <div class="col-md-2"><button class="btn btn-success btn-block">Add</button></div>
      </div>
    </form>

    <!-- Resource table -->
    <% if (resources.length > 0) { %>
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th>Title</th>
            <th>Subject ID</th>
            <th>Type</th>
            <th>Created At</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% resources.forEach(r => { %>
            <tr>
              <td><%= r.title %></td>
              <td><%= r.subject_id %></td>
              <td><%= r.type %></td>
              <td><%= (r.created_at instanceof Date ? r.created_at : new Date(r.created_at)).toISOString().slice(0,19).replace('T',' ') %></td>
              <td><a href="/viewResource/<%= r.id %>" class="btn btn-sm btn-outline-brown">View</a></td>
              <td><a href="/editResource/<%= r.id %>" class="btn btn-sm btn-warning">Edit</a></td>
              <td>
                <form action="/deleteResource/<%= r.id %>" method="POST" class="d-inline">
                  <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this resource?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-warning">No resources found.</div>
    <% } %>
  </div>
</body>
</html>